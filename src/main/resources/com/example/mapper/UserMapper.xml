<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper
        PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
        "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.example.mapper.UserMapper">
    <resultMap id="userMap" type="com.example.domain.Products">
        <id column="productId" property="product_id"/>
        <result column="p_number" property="pNumber"/>
        <result column="product" property="product"/>
        <result column="category" property="category"/>
        <result column="price" property="price"/>
        <result column="registration_date" property="registrationDate"/>
        <result column="deleted_date" property="deletedDate"/>
    </resultMap>
    <resultMap id="stocks" type="com.example.domain.Stocks">
        <id column="stockId" property="stock_id"/>
        <result column="product_id" property="product_id"/>
        <result column="inventory" property="inventory"/>
        <result column="update_date" property="update_date"/>
    </resultMap>
    <resultMap id="order" type="com.example.domain.Order">
        <id column="productId" property="product_id"/>
        <id column="stocks_id" property="stocks_id"/>
        <result column="order_number" property="order_number"/>
        <result column="order_date" property="order_date"/>
        <result column="receipt_date" property="receipt_date"/>
        <collection property="stockList" resultMap="stockMap"></collection>
    </resultMap>
    
    <resultMap id="stockMap" type="com.example.domain.Products" autoMapping="true">
    </resultMap>
    <select id="selectAll" resultType="com.example.domain.Products"  resultMap="stockMap">
        SELECT * FROM products INNER JOIN stocks ON products.product_id = stocks.product_id
    </select>
    <select id="selectOne" resultType="com.example.domain.Products">
        SELECT id, p_number, product, category, price, registration_date, deleted_date FROM products WHERE id = #{id}
    </select>
    <insert id="add" useGeneratedKeys="true" keyProperty="id">
        INSERT into products (p_number, product, category, price) values (#{p_number},#{product},#{category},#{price})
    </insert>
    <update id="update">
        UPDATE products set
        p_number = #{p_number}, product = #{product}, category = #{category}, price = #{price} where id = #{id}
    </update>
    <delete id="delete">
        DELETE FROM products WHERE id = #{id}
    </delete>
</mapper>
