<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper
        PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
        "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.example.mapper.UserMapper">

    <select id="selectAll" resultMap="stockMap">
        SELECT * FROM products INNER JOIN stocks ON products.id = stocks.product_id
<!--        SELECT-->
<!--            products.p_number,-->
<!--            products.product,-->
<!--            products.category,-->
<!--            products.price,-->
<!--            stocks.inventory,-->
<!--        FROM-->
<!--            products-->
<!--        INNER JOIN-->
<!--            stocks-->
<!--        ON-->
<!--            products.id = stocks.product_id-->
    </select>
    <resultMap id="stockMap" type="com.example.domain.Products">
        <id property="id" column="id" />
        <result property="pNumber" column="p_number" />
        <result property="product" column="product" />
        <result property="category" column="category" />
        <result property="price" column="price" />
        <collection property="stockList" ofType="com.example.domain.Stocks">
            <id property="stockId" column="stock_id" />
            <result property="inventory" column="inventory" />
        </collection>
    </resultMap>

    <select id="selectOne" resultType="com.example.domain.Result">
        SELECT id, p_number, product, category, price, registration_date, deleted_date FROM products WHERE id = #{id}
    </select>
    <insert id="add" useGeneratedKeys="true" keyProperty="id">
        INSERT into products (p_number, product, category, price) values (#{p_number},#{product},#{category},#{price})
    </insert>
    <update id="update">
        UPDATE products set
        p_number = #{p_number}, product = #{product}, category = #{category}, price = #{price} where id = #{id}
    </update>
    <delete id="delete">
        DELETE FROM products WHERE id = #{id}
    </delete>
</mapper>
