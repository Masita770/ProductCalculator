<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper
        PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
        "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.example.mapper.OrderMapper">
    <select id="resultAll" resultType="com.example.domain.Orders">
        SELECT * FROM orders
    </select>
    <select id="resultOne" resultType="com.example.domain.Orders">
<!--        SELECT * FROM orders WHERE stocks_id = #{stocks_id}-->
        SELECT * FROM orders WHERE stocks_id in (stocks_id)
    </select>
    <insert id="addOrder" useGeneratedKeys="true" keyProperty="id">
        INSERT into orders (id, stocks_id, orders_number, order_date, receipt_date) values (#{id}, #{stocksId}, #{ordersDate}, #{receiptDate})
    </insert>
</mapper>